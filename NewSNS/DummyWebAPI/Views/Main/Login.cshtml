
@{
    ViewBag.Title = "Login";
}

@section scripts {
    @Scripts.Render("/Scripts/login.js")
}

@section styles {
    @Styles.Render("~/Content/css/login.css")
}

<div class="login-btn-group">
    @*<button id="signInBtn" type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#myModal">Sign in</button>
    <button id="signUpBtn" type="button" class="btn btn-danger btn-lg">Sign up</button>*@

    <span id="signInBtn" class="custom-btn custom-btn-lg darky" data-toggle="modal" data-target="#myModal">Sign in</span>
    <span id="signUpBtn" class="custom-btn custom-btn-lg darky">Sign up</span>
</div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Please sign in</h4>
            </div>
            <div class="modal-body">
                <form method="post" action='' name="login_form">
                    <div class="modal-entry">
                        <input type="text" class="span3" id="login" placeholder="Login"></div>
                    <div class="modal-entry">
                        <input type="password" class="span3" id="pswd" placeholder="Password"></div>
                    <div class="modal-entry"><span id="logInBtn" class="custom-btn darky">Sign in</span></div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="signUpModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Enter your profile data:</h4>
            </div>
            <div class="modal-body">
                <form method="post" action='' name="login_form">
                    <div class="modal-entry">
                        <div class="entry-label">First name:</div><input type="text" class="span3" id="firstNameInput"></div>
                    <div class="modal-entry">
                        <div class="entry-label">Last name:</div><input type="text" class="span3" id="lastNameInput"></div>
                    <div class="modal-entry">
                        <div class="entry-label">Login:</div><input type="text" class="span3" id="loginInput"></div>
                    <div class="modal-entry">
                        <div class="entry-label">Password:</div><input type="password" class="span3" id="passwordInput"></div>
                    <div class="modal-entry">
                        <div class="entry-label">Birth date:</div><input type="text" class="span3" id="birthDateInput" data-provide="datepicker"  data-date-format="yyyy/mm/dd"></div>
                    <div class="modal-entry">
                        <div class="entry-label">Email:</div><input type="text" class="span3" id="emailInput"></div>
                    <div class="modal-entry">
                        <div class="entry-label">Country:</div><input type="text" class="span3" id="countryInput"></div>
                    <div class="modal-entry">
                        <div class="entry-label">City:</div><input type="text" class="span3" id="cityInput"></div>
                    <div class="modal-entry">
                        <div class="entry-label">Phone:</div><input type="text" class="span3" id="phoneInput"></div>
                    <div class="modal-entry">
                        <div class="entry-label">Info:</div><textarea rows="4" class="span3" id="infoInput"></textarea></div>
                    <div class="modal-entry"><span id="registerBtn" class="custom-btn darky">Sign up</span></div>
                </form>
            </div>
        </div>
    </div>
</div>